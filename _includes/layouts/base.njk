<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-coy.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <header>
      <div class="branding">
        <a href="/index.html">
          <img src="/img/TwoLineMonogram_white.svg" alt="BYU-I logo" class="logo">
        </a>
        <h1 class="vertical-text">{{ metadata.title }}</h1>
      </div>
      {# <h1>
                                                                                                                                                                          <a href="{{ '/' | url }}">{{ metadata.title }}</a>
                                                                                                                                                                        </h1> #}
      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <nav>
        <ul class="nav">
          {%- for entry in collections.all | eleventyNavigation %}
            <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
          {%- endfor %}
          {# <li class="nav-item{% if '/tags/js/' == page.url %} nav-item-active{% endif %}">
                      <a href="{{ '/tags/js' | url }}">JS</a>
                    </li>
                    <li class="nav-item{% if '/tags/css/' == page.url %} nav-item-active{% endif %}">
                      <a href="{{ '/tags/css' | url }}">CSS</a>
                    </li>
                    <li class="nav-item{% if '/tags/html/' == page.url %} nav-item-active{% endif %}">
                      <a href="{{ '/tags/html' | url }}">HTML</a>
                    </li>
                    <li class="nav-item{% if '/tags/design/' == page.url %} nav-item-active{% endif %}">
                      <a href="{{ '/tags/design' | url }}">Design</a>
                    </li>
                    <li class="nav-item{% if '/tags/general/' == page.url %} nav-item-active{% endif %}">
                      <a href="{{ '/tags/general' | url }}">General</a>
                    </li> #}
        </ul>
      </nav>
    </header>
    <main {% if templateClass %} class="{{ templateClass }}" {% endif %}>
      {{ content | safe }}
    </main>
    <footer></footer>
    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
